<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.menusFragment.AddCashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtOffer01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="&#x20B9;1000"
                        android:textColor="@color/black"
                        android:textSize="29sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtBonus01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Bonus\n&#x20B9;100"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnAdd01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtOffer02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="&#x20B9;1000"
                        android:textColor="@color/black"
                        android:textSize="29sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtBonus02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Bonus\n&#x20B9;100"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnAdd02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtOffer03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="&#x20B9;1000"
                        android:textColor="@color/black"
                        android:textSize="29sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtBonus03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Bonus\n&#x20B9;100"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnAdd03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtOffer04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="&#x20B9;1000"
                        android:textColor="@color/black"
                        android:textSize="29sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtBonus04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="-5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/bonus_n_x20b9_100"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnAdd04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <EditText
            android:id="@+id/eTxtEnterAddAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/ic_rupee"
            android:ems="10"
            android:hint="@string/min_add_amount_x20b9_100"
            android:inputType="number"
            android:minHeight="50dp"
            android:text="100"
            android:textSize="29sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/add_x20b9_100" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>